#include <iostream>
#include <iomanip>
#include <cmath>

using namespace std;

float molas(float p1, float p2){
    float p3 = (20-(p1+p2))/2.0;
    return p3;
}

int main(){
    float p1, p2;
    
    cin>>p1>>p2;
    
    float p3 = molas(p1, p2);
    cout<<"CALCULO DE NOTA PARA APROVACAO";
    cout<<"\nNota da primeira prova: "<<p1;
    cout<<"\nNota da segunda prova: "<<p2;
    cout<<"\nNota necessaria para passar: ";
    cout<<p3;
    
    return 0;
}
