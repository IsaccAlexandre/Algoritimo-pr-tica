#include <iostream>

using namespace std;
void conver (int sec){
    int hora = sec/3600;
    sec = sec%3600;
    int min = sec /60;
    sec = sec%60;
    cout<<"ConversÃ£o: "<<hora<<" horas, "<<min<<" minutos e "<<sec<<" segundos.";
    
    
}

int main()
{   
    int sec;
    cin>>sec;
    conver(sec);

    return 0;
}
